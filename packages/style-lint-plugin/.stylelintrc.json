{
  "plugins": [
    "./lib/index.js"
  ],
  "rules": {
    "color-hex-case": "upper",
    "ss-style-plugin/declaration-property-value-to-variable": [
      {
        "/color/": {
          "/#bbb/i": "$abc"
        },
        "/border/": {
          "/#ccc/i": "$b"
        }
      },
      {
        "severity": "warning", 
        "import": [
          {
            "keyword": [
              "colors.scss",
              "variable/_colors"
            ],
            "file": "@import 'variable/_colors.scss';"
          }
        ]
      }
    ]
  }
}