{
  "plugins": [
    "./lib/index.js",
    "./lib/plugin/font-width-line-height.js"
  ],
  "rules": {
    "color-hex-case": "upper",
    "ss-style-plugin/font-width-line-height": [
      {
        "font-size": {
          "withProperties": "line-height",
          "value": {
            "18px": "28px",
            "16px": "24px",
            "14px": "22px",
            "12px": "18px"
          }
        }
      },
      {
        "severity": "warning"
      }
    ],
    "ss-style-plugin/declaration-property-value-to-variable": [
      {
        "/color/": {
          "/#bbb/i": "$abc"
        },
        "/border/": {
          "/#ccc/i": "$b"
        }
      },
      {
        "severity": "warning", 
        "import": [
          {
            "keyword": [
              "colors.scss",
              "variable/_colors"
            ],
            "file": "@import 'variable/_colors.scss';"
          }
        ]
      }
    ]
  }
}